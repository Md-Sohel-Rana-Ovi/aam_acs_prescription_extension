<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ccl_requisition_form_view" model="ir.ui.view">
            <field name="name">store.requisition.form.view</field>
            <field name="model">store.requisition</field>
            <field name="arch" type="xml">
                <form string="Store Requisition">
                    <header>
                        <button name="request" string="Request" type="object" states="draft" class="btn-primary"/>
                        <button name="confirm" string="Confirm" type="object" states="request" class="btn-primary"
                                groups="aam_requisition.group_store_requisition_department_manager"/>
                        <button name="approve" string="Approve" type="object" states="confirm" class="btn-primary"
                                groups="aam_requisition.group_store_requisition_manager"/>
                        <button name="prepare_transfer" string="Transfer" type="object" states="approve,partial"
                                class="btn-primary" groups="aam_requisition.group_store_requisition_store_keeper"/>/>
                        <button name="reject" type="object" string="Reject"
                                attrs="{'invisible': [('state', 'in', ['draft'])]}"/>
                        <field name="state" widget="statusbar"/>


                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button type="object" name="action_view_transfer" class="oe_stat_button" icon="fa-truck"
                                    attrs="{'invisible': [('picking_count', '=', 0)]}"
                                    groups="aam_requisition.group_store_requisition_manager,aam_requisition.group_store_requisition_store_keeper">
                                <field name="picking_count" widget="statinfo" string="Transfers"/>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Store Requisition" readonly="1"/>
                            </h1>

                        </div>
                        <group>
                            <group>
                                <field name="employee_id" required='1'/>
                                <field name="department_id"/>
                            </group>
                            <group>
                                <field name="create_date" string="Issue Date" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="items" string="Items">
                                <field name="requsition_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" required='1'/>
                                        <field name="uom_id"/>
                                        <field name="quantity" required='1'/>
                                        <field name="quantity_done" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Information">
                                <group>
                                    <group>
                                        <field name="confirmed_by" readonly="1"/>
                                        <field name="approved_by" readonly="1"/>
                                        <field name="transfered_by" readonly="1"/>
                                        <field name="rejected_by" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="confirmed_date" readonly="1"/>
                                        <field name="approved_date" readonly="1"/>
                                        <field name="transfered_date" readonly="1"/>
                                        <field name="rejected_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>

                        <label for="description" attrs="{'readonly': [('state', 'in', ['reject'])]}"
                               string="Requisition Reason"/>
                        <field name="description" attrs="{'readonly': [('state', 'in', ['reject'])]}"/>


                    </sheet>
                    <!--                    <div class="oe_chatter">-->
                    <!--                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>-->
                    <!--                        <field name="activity_ids" widget="mail_activity"/>-->
                    <!--                        <field name="message_ids" widget="mail_thread"/>-->
                    <!--                    </div>-->
                </form>


            </field>
        </record>

        <record id="ccl_requisition_tree_view" model="ir.ui.view">
            <field name="name">store.requisition.tree.view</field>
            <field name="model">store.requisition</field>
            <field name="arch" type="xml">
                <tree string="Store Requisition">
                    <field name="create_date"/>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <!-- Requisition Wizard View -->
        <record model="ir.ui.view" id="aam_requisition_view_wizard">
            <field name="name">store.requisition.wizard.view</field>
            <field name="model">store.requisition</field>
            <field name="arch" type="xml">
                <form string="Store Requisition">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="create_date" string="Issue Date" readonly='1'/>
                            </group>
                        </group>
                        <notebook>
                            <page name="items" string="Items">
                                <field name="requsition_line_ids">
                                    <tree editable="bottom" create="false" delete='false'>
                                        <field name="product_id" readonly="1"/>
                                        <field name="uom_id"/>
                                        <field name="quantity" string="Requested Qty" readonly="1"/>
                                        <field name="quantity_inprogress" string="Transfer Qty"/>
                                        <field name="available_qty" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="transfer" string="Transfer" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="aam_requisition_action" model="ir.actions.act_window">
            <field name="name">Requisition</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">store.requisition</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

    </data>
</odoo>